<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor"
    tools:context=".activity.ForgotPassword">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <EditText
            android:id="@+id/etMobileForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#e1f5fe"
            android:padding="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:layout_below="@id/toolbar"
            android:hint="Mobile Number"
            android:drawableLeft="@drawable/ic_mobile_number"
            android:inputType="number"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etEmailForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#e1f5fe"
            android:padding="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_email"
            android:layout_below="@id/etMobileForgot"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmailForgot"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/ButtonColor"
            android:text="Next"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"/>
    </RelativeLayout>

</LinearLayout>