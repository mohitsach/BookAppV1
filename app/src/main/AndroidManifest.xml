<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mohit.BookAppV2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainicon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_secutiy_config"
        android:resizeableActivity="false"
        android:roundIcon="@drawable/bookicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mohit.BookAppV2.activity.ResetPassword"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"></activity>
        <activity
            android:name="com.mohit.BookAppV2.activity.DescriptionActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.mohit.BookAppV2.activity.ForgotPassword"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.mohit.BookAppV2.activity.RegisterActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.mohit.BookAppV2.activity.MenuActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.mohit.BookAppV2.activity.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.mohit.BookAppV2.activity.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>